package card

const (
	SmallCard = "card-sm"
	LargeCard = "card-large"
)

type CardProps struct {
	Size string
}

templ Card(props ...CardProps) {
	{{
	var prop = CardProps{}
	if len(props) > 0 {
		prop = props[0]
	}

	class := prop.Size
	if class == "" {
		class = "card"
	}
	}}
	<div class={ class }>
		{ children... }
	</div>
}
